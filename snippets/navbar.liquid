<header id="navbar">
    <div class="wrap">

        <div class="left">

            <div class="logo">
                {% if settings.logo_strip %}
                    <img src="{{ settings.logo_strip | image_url: width: '700' }}" alt="{{ shop.name }}" />
                {% else %}
                    <a id="site-title" class="headline" href="/">
                        {{ shop.name }}
                    </a>
                {% endif %}
            </div>

            {% render 'site-nav' %}
        </div>

        <div class="right">
            
            <div class="login-trigger">
                {% render 'icon--account' %}
            </div>
            
            <div class="mini-cart">
                <span class="count">{{ cart.item_count }}</span> {% render 'icon--cart' %}
            </div>

        </div>

    </div>

    <div class="login-dropdown">
        {% render 'customer-login' %}
    </div>

    <div class="search-dropdown">
        {% render 'search' %}
    </div>

</header>