<!doctype html>
<!--[if lt IE 7]><html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="en"> <![endif]-->
<!--[if IE 7]><html class="no-js lt-ie9 lt-ie8" lang="en"> <![endif]-->
<!--[if IE 8]><html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if IE 9 ]><html class="ie9 no-js"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html class="no-js"> <!--<![endif]-->  
<head>
  <meta charset="utf-8" />
  <!--[if IE]><meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1' /><![endif]-->

  <title>
  {{ page_title }}{% if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif %}{% if current_page != 1 %} &ndash; Page {{ current_page }}{% endif %}{% unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless %}
  </title>

  {% if page_description %}
    <meta name="description" content="{{ page_description | escape }}" />
  {% endif %}

  <link rel="canonical" href="{{ canonical_url }}" />

  <meta name="viewport" content="width=device-width, initial-scale=1" />
  
  {% render 'open-graph-tags' %}
  {% render 'twitter-card' %}

  {{ content_for_header }}
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />

  {{ 'index.css' | asset_url | stylesheet_tag }}

  <!--[if lt IE 9]>
  {{ '//html5shiv.googlecode.com/svn/trunk/html5.js' | script_tag }}
  <![endif]-->

  {{ 'shopify_common.js' | shopify_asset_url | script_tag }}
  {% if template contains 'customers' %}  
    {{ 'customer_area.js'  | shopify_asset_url | script_tag }}
  {% endif %}
  
  {{ 'shopify_common.js'  | asset_url | script_tag }}

  {{ 'option_selection.js' | shopify_asset_url | script_tag }}

  {{ '//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js' | script_tag }}
  <script>jQuery('html').removeClass('no-js').addClass('js');</script>

</head>

<body id="{{ page_title | handle }}" class="{% if customer %}customer-logged-in {% endif %}template-{{ template | replace: '.', ' ' | truncatewords: 1, '' | handle }}" >
  
  {% render 'navbar' %}
  {% render 'navbar-mobile' %}
  {% render 'mobile-menu' %}

  <main role="main">
    {{ content_for_layout }}
  </main>

  {% render 'footer' %}

  {{ 'shop.js'  | asset_url | script_tag }}

  {% comment %} 
    FIX PAGE TOP MARGIN
  {% endcomment %}
  <script>
    (function($) {

      $(document).ready(function() {
        var navheight = $('header').outerHeight();
        $('main[role="main"]').css('margin-top', navheight);
        //$('.hero-swiper').css('height', 'calc(100svh - ' + navheight + 'px)');
      });

    })(jQuery);
  </script>

  {% comment %} 
    INTERACTIVE
  {% endcomment %}
  <script>
    (function($) {

      /*
        LOGIN
      */
      $('.login-trigger').on('click', function() {

          if ( $('.search-dropdown').css('display', 'block') ) {
            $('.search-dropdown').css({
                display: 'none'
            });
          }

          if ($('.login-dropdown').css('display') == 'block') {

              $('.login-dropdown').css({
                  display: 'none'
              });

          } else {

              $('.login-dropdown').css({
                  display: 'block',
                  position: 'absolute',
                  right: '0',
                  bottom: '-100'
              });
              
          }

      });

      /*
        SEARCH
      */
     $('.search-trigger').on('click', function() {

        if ( $('.login-dropdown').css('display', 'block') ) {
            $('.login-dropdown').css({
                display: 'none'
            });
        }

          if ($('.search-dropdown').css('display') == 'block') {

              $('.search-dropdown').css({
                  display: 'none'
              });

          } else {

              $('.search-dropdown').css({
                  display: 'block',
                  position: 'absolute',
                  right: '0',
                  bottom: '-100'
              });
              
          }

      });

      /*
        CART
      */
      $('.mini-cart').on('click', function() {
          window.location = '/cart';
      });

      /*
        MOBILE NAV
      */
     $('.hamburger').on('click', function() {
        $('.mobile-menu').css({
          display: 'block'
        });
     });

     $('.closer').on('click', function() {
        $('.mobile-menu').css({
          display: 'none'
        });
     });

    })(jQuery);
  </script>

  {% comment %} 
    SWIPER
  {% endcomment %}
  <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
  <script type="text/javascript">
    (function($) {

      $(document).ready(function() {
        var swiper = new Swiper('.swiper', {
          direction: 'horizontal',
          duration: 1000,
          // autoplay: {
          //   delay: 5000,
          // },
          loop: true,
          navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
          }
        });
      });

    })(jQuery);
  </script>

</body>

</html>