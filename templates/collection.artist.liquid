<link rel="stylesheet" href="{{ 'artist-collection.css' | asset_url }}" />

<div class="page-container artist-collection">

    <div class="artist-hero" style="background: url('{{ collection.image | image_url: width: '1200' }}'); background-size: cover; background-position: {{ collection.image.presentation.focal_point }}"></div>

    <div class="artist-info">
        <div class="left">
            <h1 class="name">{{ collection.title }}</h1>

            <p class="artist-description">
                {{ collection.description }}
            </p>

        </div>

        <div class="right">
        
            <div class="follow">
                <h3>Follow</h3>
                {{ collection.metafields.artist.artist_socials | metafield_tag }}
            </div>

        </div>

    </div>




</div>