<link rel="stylesheet" href="{{ 'product-grid.css' | asset_url }}" />


<ul class="products">
  {% for coll in collections %}

    
      {% if coll.handle == 'frontpage' %}
 
          {% for prod in coll.products %}
            {% render 'product-card', prod: prod %}
          {% endfor %}


      {% endif %}
    

  {% endfor %}
</ul>